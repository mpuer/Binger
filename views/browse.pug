extends layout.pug

block content
    div(class="column browse-content")
        h2= `TV Shows`
        div
            ul
                each show in tvShows
                    li 
                      div(class="shows")
                        img(src=show.image)
                        p #{show.name}
                        p #{show.genre}
                        p #{show.rating}
                        p #{show.synopsis}









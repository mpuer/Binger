extends layout.pug

block content
    div(class="column browse-content")
        h2= `TV Shows`
        div
            ul
                each show in tvShows
                    li 
                      div(class="shows")
                        img(src=show.image class="images")
                        div(class="description")
                            p(class="titles") #{show.name}
                            p(class="genre") #{show.genre}
                            p(class="rating") #{show.rating}
                            p(class="synopsis") #{show.synopsis}
                            select
                                    each channel in channels
                                        option(value=channel.name)
                            button(type="submit") Add To Channels

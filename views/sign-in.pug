doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="icon" type="image/png" href="/stylesheets/favicon.ico")
        link(rel='stylesheet' type="text/css" href='/stylesheets/sign-up.css')
        title User Login
    body
        form(class='form' method="POST" action="/sign-in")
            h2 Sign In
            div
                if errors
                    div
                        ul
                            each error in errors
                                li(class="sign-in-errors")  #{error}
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="string" id="username" name="username" placeholder='Username')
            input(type="password" id="password" name="password" placeholder='Password')
            button(type="submit") Sign-in!
